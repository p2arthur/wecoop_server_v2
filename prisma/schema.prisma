generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id   String  @unique
  creator_address  String
  text             String
  timestamp        Int
  country          String
  assetId          Int
  replies          Reply[] @relation("PostReplies")
  likes            Like[]  @relation("PostLikes")
}


model Reply {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id     String @unique
  post_transaction_id String
  creator_address    String
  text               String
  timestamp          Int
  country            String
  assetId            Int
  post               Post?   @relation("PostReplies", fields: [post_transaction_id], references: [transaction_id])
  // file_post           FilePost?   @relation("PostReplies", fields: [post_transaction_id], references: [transaction_id])

  @@index([post_transaction_id])
}

model Like {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id     String @unique
  creator_address    String
  post_transaction_id String
  post               Post   @relation("PostLikes", fields: [post_transaction_id], references: [transaction_id])
  // file_post               FilePost   @relation("PostLikes", fields: [post_transaction_id], references: [transaction_id])

  @@index([post_transaction_id])
}

model Poll {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  pollId           Int     @unique
  creator_address  String
  text             String
  timestamp        Int
  country          String
  assetId          Int
  depositedAmount  Int
  totalVotes       Int
  yesVotes         Int
  expiry_timestamp Int
  status           String
  voters           Voter[]
}

model Voter {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  pollId       Int
  voterAddress String
  claimed      Boolean
  poll         Poll   @relation(fields: [pollId], references: [pollId])
  in_favor Boolean
  deposited_amount Int

  @@unique([pollId, voterAddress])
  @@index([pollId])
}

model Notification {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id   String?  @unique
  pollId           Int?
  wallet_address   String
  text             String
  read             Boolean
}



model FilePost {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id   String  @unique
  creator_address  String
  text             String
  timestamp        Int
  country          String
  assetId          Int
  file_1_cid        String
  file_1_format     String
  file_2_cid        String?
  file_2_format        String?
  // replies          Reply[] @relation("PostReplies")
  // likes            Like[]  @relation("PostLikes")
}