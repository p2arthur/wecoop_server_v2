generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Post {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id String @unique
  creator_address String
  text String
  timestamp Int
  country String
  assetId Int
}

model Like {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id String @unique
  creator_address String
  post_transaction_id String
}


model Reply {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  transaction_id String @unique
  post_transaction_id String
  creator_address String
  text String
  timestamp Int
  country String
  assetId Int
}


model Poll {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  pollId  Int @unique
  creator_address String
  text String
  timestamp Int
  country String
  assetId Int
  depositedAmount Int
  totalVotes Int
  yesVotes Int
  expiry_timestamp Int
  status String
}

model Voter {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  pollId Int
  voterAddress String
  claimed Boolean

  @@unique([pollId, voterAddress])
}



